!!! 5
%html
   %head
      %meta{:charset => 'utf-8'}
      %meta{:content => 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible'}
      %title Egan Wiesner
      %meta{:content => 'Egan Wiesner is a London based Architectural and Interior Design Studio established in 2008 by Chris Egan and Will Wiesner.', :name => 'description'}
      %meta{:content => "width=device-width, initial-scale=1.0, user-scalable=0, maximum-scale=1.0", :name => "viewport"}
      %link{:href => 'http://fonts.googleapis.com/css?family=EB+Garamond', :rel => 'stylesheet', :type => 'text/css'}
      %link{:href => 'http://fonts.googleapis.com/css?family=Droid+Sans:400,700', :rel => 'stylesheet', :type => 'text/css'}

      != css :application

   %body{:class => page_theme + ' ' + current_primary + solid_nav + is_project_css + is_news_css + is_home_css + device_css}
      #outer
         = partial :'nav'
         #wrapper
            .content
               -if @is_news
                  = haml ('pages/news').to_sym
               -elsif @is_home
                  = partial :'gallery_home'
               -else
                  = partial :'gallery'
         .control.control-next
            .next.next-hover
         .control.control-prev
            .prev.prev-hover.disabled


         != js :app

         :javascript
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-37239063-1']);
            _gaq.push(['_trackPageview']);

            (function() {
             var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
             ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
             var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();

